@model CoffeeShopMVC.Model.Item;

<h1>Edit Item</h1>

<form method="post" action="/Items/Details/@Model.Id">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label for="PriceInCents">Price In Cents:</label>
        <input type="number" id="PriceInCents" name="PriceInCents" value="@Model.PriceInCents" />
    </div>
    <button type="submit">Update Item</button>
</form>
